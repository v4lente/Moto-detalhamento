{
  "$schema": "https://api.hostinger.com/schemas/hostinger.json",
  "version": 1,
  "build": {
    "nodeVersion": "20.19.0",
    "packageManager": "npm",
    "installCommand": "npm ci --include=dev",
    "buildCommand": "chmod +x node_modules/.bin/* node_modules/**/esbuild/bin/esbuild node_modules/**/@esbuild/*/bin/esbuild 2>/dev/null || true && npm run build",
    "outputDirectory": "dist"
  },
  "runtime": {
    "startCommand": "npm start",
    "healthCheckPath": "/api/settings",
    "timeout": 30000
  },
  "environment": {
    "NODE_ENV": "production"
  }
}
