{
  "$schema": "https://api.hostinger.com/schemas/hostinger.json",
  "version": 1,
  "build": {
    "nodeVersion": "20.19.0",
    "packageManager": "npm",
    "installCommand": "npm ci --include=dev",
    "buildCommand": "find node_modules -name 'esbuild' -path '*/bin/esbuild' -exec chmod +x {} + 2>/dev/null; npm run build",
    "outputDirectory": "."
  },
  "runtime": {
    "startCommand": "node dist/index.js",
    "healthCheckPath": "/api/settings",
    "timeout": 30000
  },
  "environment": {
    "NODE_ENV": "production"
  }
}
