{
  "$schema": "https://api.hostinger.com/schemas/hostinger.json",
  "version": 1,
  "build": {
    "nodeVersion": "20.19.0",
    "packageManager": "npm",
    "installCommand": "unset ESBUILD_BINARY_PATH; npm ci --include=dev",
    "buildCommand": "chmod -R +x node_modules/.bin 2>/dev/null || true; find node_modules -type f -name 'esbuild' -path '*/bin/*' -exec chmod +x {} \\; 2>/dev/null || true; npm run build",
    "outputDirectory": "."
  },
  "runtime": {
    "startCommand": "node --env-file-if-exists=.env dist/index.js",
    "healthCheckPath": "/",
    "timeout": 30000
  },
  "environment": {
    "NODE_ENV": "production"
  }
}
